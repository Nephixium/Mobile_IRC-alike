<?xml version="1.0" encoding="utf-8"?>

<!-- Textfältet som innehåller meddelanden och läggs till i RecyclerView. -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/message_layout_object"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/chat_bubble"
        android:padding="25dp"
        android:autoLink="web"
        android:shadowColor="@color/dropShadow"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="10"
        android:text="TextView"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#15E415"
        android:textColorHint="#4E3E3E"
        android:textColorLink="#11FF11"
        android:textSize="15sp" />
</LinearLayout>